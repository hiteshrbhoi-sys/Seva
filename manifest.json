  ],
  "screenshots": [
    {
      "src": "/screenshots/mobile-home.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Home Screen"
    },
    {
      "src": "/screenshots/mobile-donate.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Create Donation"
    },
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Desktop View"
    }
  ],
  "shortcuts": [
    {
      "name": "Create Donation",
      "short_name": "Donate",
      "description": "Post a new food donation",
      "url": "/?action=create&source=shortcut",
      "icons": [
        {
          "src": "/icons/shortcuts/donate.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Nearby Donations",
      "short_name": "Nearby",
      "description": "View donations near you",
      "url": "/?tab=nearby&source=shortcut",
      "icons": [
        {
          "src": "/icons/shortcuts/nearby.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Track Delivery",
      "short_name": "Track",
      "description": "Track your deliveries",
      "url": "/?tab=tracking&source=shortcut",
      "icons": [
        {
          "src": "/icons/shortcuts/track.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Community Feed",
      "short_name": "Community",
      "description": "View community posts",
      "url": "/?tab=community&source=shortcut",
      "icons": [
        {
          "src": "/icons/shortcuts/community.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "video/*"]
        }
      ]
    }
  }
}
